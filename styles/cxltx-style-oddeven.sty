
% checking whether we're on an odd or an even page
\ProvidesPackage{cxltx-style-oddeven}

% ==========================================================================================================
%
% ----------------------------------------------------------------------------------------------------------
\usepackage{changepage}

% ----------------------------------------------------------------------------------------------------------
\newcommand{\oeIfOddPage}[2]{%
  \strictpagecheck\checkoddpage\ifoddpage%
    #1%
  \else%
    #2%
  \fi%
  }%

% ----------------------------------------------------------------------------------------------------------
\newcommand{\oeIfEvenPage}[2]{%
  \strictpagecheck\checkoddpage\ifoddpage%
    #2%
  \else%
    #1%
  \fi%
  }%
